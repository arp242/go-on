# vim:ft=zsh

help-shell() {
	<<-EOF
	Run an interactive shell on the remote server.

	Like ssh, any further arguments are taken as the command to execute:

	    % $progname freebsd ssh ls /
	    COPYRIGHT
	    bin
	    boot
	    dev
	    â€¦
	EOF
}

cmd-shell() {
  ssh $@
}

cmd-sh()   { cmd-shell $@ }
cmd-ssh()  { cmd-shell $@ }
help-sh()  { help-shell }
help-ssh() { help-shell }
